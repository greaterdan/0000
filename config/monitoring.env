# Monitoring and Observability Configuration

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_FORMAT=json
LOG_ROTATION=true
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_COLLECTION_INTERVAL=15s

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# Error Tracking Configuration
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_URL=
ERROR_TRACKING_SAMPLE_RATE=1.0
ERROR_TRACKING_MAX_REPORTS=1000
ERROR_TRACKING_RETENTION_DAYS=30

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1
PERFORMANCE_SLOW_QUERY_THRESHOLD=1000ms
PERFORMANCE_MEMORY_THRESHOLD=90%
PERFORMANCE_CPU_THRESHOLD=90%

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_WEBHOOK_URL=
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=
ALERT_EMAIL_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3001
DASHBOARD_AUTH_ENABLED=true
DASHBOARD_AUTH_USERNAME=admin
DASHBOARD_AUTH_PASSWORD=admin123

# External Monitoring Services
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=
PROMETHEUS_PUSHGATEWAY_URL=

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICE_REGISTRY_URL=
SERVICE_HEALTH_CHECK_INTERVAL=60s

# Distributed Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
JAEGER_ENDPOINT=
ZIPKIN_ENDPOINT=

# Business Metrics
BUSINESS_METRICS_ENABLED=true
BUSINESS_METRICS_INTERVAL=60s
BUSINESS_METRICS_RETENTION_DAYS=90

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
SECURITY_EVENT_RETENTION_DAYS=365
SECURITY_ALERT_THRESHOLD=10
SECURITY_RATE_LIMIT_THRESHOLD=100

# Database Monitoring
DB_MONITORING_ENABLED=true
DB_SLOW_QUERY_THRESHOLD=1000ms
DB_CONNECTION_POOL_MONITORING=true
DB_QUERY_METRICS_ENABLED=true

# Cache Monitoring
CACHE_MONITORING_ENABLED=true
CACHE_HIT_RATIO_THRESHOLD=80%
CACHE_MEMORY_THRESHOLD=90%

# Queue Monitoring
QUEUE_MONITORING_ENABLED=true
QUEUE_SIZE_THRESHOLD=1000
QUEUE_PROCESSING_TIME_THRESHOLD=30s

# API Monitoring
API_MONITORING_ENABLED=true
API_RESPONSE_TIME_THRESHOLD=2000ms
API_ERROR_RATE_THRESHOLD=5%
API_THROUGHPUT_THRESHOLD=1000rps

# Infrastructure Monitoring
INFRASTRUCTURE_MONITORING_ENABLED=true
DISK_USAGE_THRESHOLD=90%
NETWORK_LATENCY_THRESHOLD=100ms
LOAD_AVERAGE_THRESHOLD=4.0
